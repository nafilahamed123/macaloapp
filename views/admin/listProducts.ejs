<%- include('../adminlayout/adminheader.ejs') %>
<table class="table table-dark">
    <thead>
      <tr>
        
        <th scope="col"> Product Name</th>
        <th scope="col">Image</th>
        <th scope="col">Category</th>
        <th scope="col"> Sub Category</th>
        <th scope="col">Brand</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>

        <th scope="col">Action</th>

      </tr>
    </thead>
    <tbody>
        <% products.forEach((product,index) => { %>
            <tr>
            
                <td><%= product.name %></td>
                <td>
                    <% if (product.image.length > 0) { %>
                      <img src="<%= product.image[0] %>" alt="Product Image" class="img-fluid" width="50px" height="50px">
                    <% } %>
                  </td>
                <td><%= product.category %></td>
                <td><%= product.subCategory %></td>
                <td><%= product.brand %></td>
                <td><%= product.price %></td>
                <td><%= product.stock %></td>
                <td>
                  <a class="btn btn-primary btn-rounded-pill" href="/admin/edit-produt/<%= product._id %>">Edit</a> 
                  <a class="btn btn-primary btn-rounded-pill" href="/admin/delete-product/<%= product._id %>">Delete</a> 
                </td>
              </tr>

       <% }); %>
     
      
    </tbody>
  </table>
  <%- include('../adminlayout/adminfooter.ejs') %>